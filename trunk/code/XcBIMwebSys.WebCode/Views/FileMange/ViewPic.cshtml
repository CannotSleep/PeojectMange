
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="zh-Hans">
<head>
    <meta charset="utf-8">
    <title>图片查看</title>
    <link rel="stylesheet" href="~/Content/css/viewer.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        #jq22 {
            width: 700px;
            margin: 0 auto;
            font-size: 0;
        }

            #jq22 li {
                display: inline-block;
                width: 100%;
            }

                #jq22 li img {
                    width: 100%;
                    margin: 0 auto;
                }
    </style>
</head>

<body>
    <h3 style="height: 80px;width: 200px;margin:0 auto">图片查看器点击放大</h3>
    <ul id="jq22">
        <li><img data-original="tibet-1.jpg" src="~/Temp/username/timg.jpg" alt="图片1"></li>
        <li><img data-original="tibet-2.jpg" src="tibet-2.jpg" alt="图片2"></li>
        <li><img data-original="tibet-3.jpg" src="tibet-3.jpg" alt="图片3"></li>
        <li><img data-original="tibet-4.jpg" src="tibet-4.jpg" alt="图片4"></li>
        <li><img data-original="tibet-5.jpg" src="tibet-5.jpg" alt="图片5"></li>
        <li><img data-original="tibet-6.jpg" src="tibet-6.jpg" alt="图片6"></li>
    </ul>

    <script src="~/Content/js/viewer.min.js"></script>
    <script src="~/Content/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>

    <script>
        var viewer = new Viewer(document.getElementById('jq22'), {
            url: 'data-original'
        });

        var htmla = "";

        $(document).ready(function () {
            var picName = getCookie('picname');
            //alert(picName);
            htmla += "<li><img id='img1' data-original='" + "/Temp/测试项目一/1234/" + picName + "' src='" + "/Temp/测试项目一/1234/" + picName + "' alt='pic1'></li>";
            alert(htmla);
            $("#jq22").html(htmla);
            $("#img1").click();
        });


        //读取Cookie的方法
        function getCookie(key) {
            var arr1 = document.cookie.split('; ');
            for (var i = 0; i < arr1.length; i++) {
                var arr2 = arr1[i].split('=');
                if (arr2[0] == key) {
                    return decodeURI(arr2[1]);
                }
            }
        }

    </script>
</body>
</html>
